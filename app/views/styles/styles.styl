// sticky footer height
footerHeight = 80px

// The html and body elements cannot have any padding or margin
html
body
    height 100%

a
    &.red
        color #d2322d
    &.blue
        color #428bca
    &.green
        color #47a447
    &.glyphiconhover
        text-decoration none      

// Wrapper for page content to push down footer
#wrap
    min-height 100%
    height auto !important
    height 100%
    margin 0 auto -(footerHeight)

#push
#footer
    height footerHeight

#footer
    padding 0px 20px
    
.well pre
    background #fff

.item-controls
    position absolute
    top 0
    right 0

.item-controls .btn-group
    margin-right 8px

.indent
    padding-left 12px
    margin-bottom 10px
    border-left 1px solid #eee

.margin-left-10
    margin-left 10px

.margin-right-10
    margin-right 10px

.margin-top-20
    margin-top 20px

.capitalize
    text-transform capitalize      

/* cores-ng styles */

[cr-tab-object] .tab-content
    overflow visible
    margin-top 12px

[cr-slug] input[type=text]
    text-transform lowercase

[cr-model-list-filter] select
    width auto

[cr-anyof-item] .cr-object-label
    position absolute
    top -1px
    left -1px
    padding 5px 12px
    background-color #f5f5f5
    border 1px solid #ddd
    color #46a546
    border-radius 4px 0 4px 0

.cr-array-item-group
.cr-anyof-item-group
    position relative
    border 1px solid #ddd
    border-radius 4px
    padding-left 12px
    padding-right 12px
    margin 6px 0 6px

.cr-array-item-group
    padding-top 6px

.cr-anyof-item-group
    padding-top 40px

.cr-item-controls
    position absolute
    top -1px
    right -1px

.cr-item-controls .btn-group
    margin-right 8px

.cr-item-body

.cr-item-footer
    text-align center
    margin-bottom 6px

.cr-item-footer .btn-group
    text-align left

.cr-indent
    padding-left 12px
    border-left 1px solid #eee

.cr-editor.cr-border
cr-debug
    border 1px solid #ccc
    border-radius 4px
    overflow hidden

.cr-editor.cr-border
    padding 8px

.cr-editor .btn-group
    margin-top 8px

.cr-editor-area
    display block
    width 100%
    box-shadow none
    border-style none
    border-color transparent
    overflow auto
    -moz-box-sizing border-box
    box-sizing border-box

.cr-editor-preview
    display none

.cr-debug
    padding 0 10px 10px

.cr-ref-controls
    margin-top 6px

.cr-model-controls .btn
    margin-left 2px
    margin-right 2px

.cr-list-buttons
    width 1%
    white-space nowrap

.cr-list-buttons .btn
    float none

/* http//www.abeautifulsite.net/blog/2013/08/whipping-file-inputs-into-shape-with-bootstrap-3/ */
.cr-btn-file
    position relative
    overflow hidden

.cr-btn-file input[type=file]
    position absolute
    top 0
    right 0
    min-width 100%
    min-height 100%
    font-size 999px
    text-align right
    filter unquote('alpha(opacity=0)')
    opacity 0
    background red
    cursor inherit
    display block